@{
    ViewData["Title"] = "Manage Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Products</h2>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <p class="text-danger">@ViewBag.Error</p>
}

@if (ViewBag.UploadResult != null)
{
    <div class="alert alert-success">
        <p>@ViewBag.UploadResult.message</p>
        <p>Assigned to Product ID: @ViewBag.UploadResult.productId</p>
    </div>
}

<form asp-action="UploadProductImage" asp-controller="Home" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Select Product</label>
        <select name="productId" class="form-control" required>
            @foreach (var product in ViewBag.Products)
            {
                <option value="@product.Id">@product.Name</option>
            }
        </select>
    </div>
    <div class="form-group mt-2">
        <label>Upload Image</label>
        <input type="file" name="file" accept="image/*" class="form-control-file" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Upload</button>
</form>