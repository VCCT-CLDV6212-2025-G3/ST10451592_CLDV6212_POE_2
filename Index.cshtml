<!-- File: Views/Customers/Index.cshtml -->
@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row g-4">
    <!-- Alerts -->
    <div class="col-12 text-center mb-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

    <!-- Link to Create New Customer -->
    <div class="col-12">
        <a href="@Url.Action("Create", "Customers")" class="btn btn-primary mb-3">Add New Customer</a>
    </div>

    <!-- Customers List -->
    <div class="col-12">
        <div class="card">
            <div class="card-header">Customers (Table Storage)</div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Address</th>
                            <th>Created Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in ViewBag.Customers as List<Customer>)
                        {
                            <tr>
                                <td>@customer.FirstName</td>
                                <td>@customer.LastName</td>
                                <td>@customer.Email</td>
                                <td>@customer.PhoneNumber</td>
                                <td>@customer.Address</td>
                                <td>@customer.CreatedDate</td>
                                <td>
                                    <a href="@Url.Action("Details", "Customers", new { id = customer.RowKey })" class="btn btn-info btn-sm">View</a>
                                    <a href="@Url.Action("Edit", "Customers", new { id = customer.RowKey })" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="@Url.Action("Delete", "Customers", new { id = customer.RowKey })" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (ViewBag.TotalCustomers > 5)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center mt-2">
                            @for (int i = 1; i <= (int)Math.Ceiling((double)ViewBag.TotalCustomers / 5); i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="?page=@i">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap validation -->
    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}