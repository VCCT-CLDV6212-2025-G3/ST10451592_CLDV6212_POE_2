@{
    ViewData["Title"] = "Product Images";
}

<div class="container mt-4">
    <h1 class="mb-4">Product Image Gallery</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Upload Form -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Upload Product Image</h5>
        </div>
        <div class="card-body">
            <form asp-controller="ProductDetails" asp-action="UploadImage" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label">Select Image File</label>
                    <input type="file" name="file" class="form-control" accept="image/*" required>
                </div>
                <button type="submit" class="btn btn-primary">Upload Image</button>
            </form>
        </div>
    </div>

    <!-- Image Gallery -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Uploaded Images (@ViewBag.TotalBlobs total)</h5>
        </div>
        <div class="card-body">
            @if (ViewBag.BlobNames != null && ViewBag.BlobNames.Count > 0)
            {
                <div class="row">
                    @foreach (var blobName in ViewBag.BlobNames)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <img src="https://st10451592.blob.core.windows.net/productimages/@blobName"
                                     class="card-img-top"
                                     alt="@blobName"
                                     style="height: 250px; object-fit: cover;">
                                <div class="card-body">
                                    <p class="card-text small text-muted">@blobName</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (ViewBag.TotalBlobs > 5)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Math.Ceiling((double)ViewBag.TotalBlobs / 5); i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-controller="ProductDetails" asp-action="Index" asp-route-page="@i">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <p class="text-muted">No images uploaded yet. Upload your first product image above!</p>
            }
        </div>
    </div>
</div>