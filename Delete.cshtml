<!-- File: Views/Customers/Delete.cshtml -->
@model Customer
@{
    ViewData["Title"] = "Delete Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <h2>Delete Customer</h2>
        <p>Are you sure you want to delete this customer?</p>
        <dl class="row">
            <dt class="col-sm-2">First Name</dt>
            <dd class="col-sm-10">@Model.FirstName</dd>
            <dt class="col-sm-2">Last Name</dt>
            <dd class="col-sm-10">@Model.LastName</dd>
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>
            <dt class="col-sm-2">Phone Number</dt>
            <dd class="col-sm-10">@Model.PhoneNumber</dd>
            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Model.Address</dd>
            <dt class="col-sm-2">Created Date</dt>
            <dd class="col-sm-10">@Model.CreatedDate</dd>
        </dl>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.RowKey" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Index", "Customers")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>