@model ABCRetailWebApp.Models.Product
@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <h2 class="text-danger">Delete Product</h2>
        <h4 class="text-warning">Are you sure you want to delete this product? This action cannot be undone.</h4>
        <hr />

        <div class="card mb-4 shadow-sm">
            <div class="row g-0">
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl"
                             class="img-fluid rounded-start"
                             alt="@Model.Name"
                             style="height: 100%; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-secondary d-flex align-items-center justify-content-center h-100 p-5">
                            <i class="bi bi-image text-white" style="font-size: 4rem;"></i>
                        </div>
                    }
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Name</h5>
                        <dl class="row">
                            <dt class="col-sm-3">Product ID</dt>
                            <dd class="col-sm-9">@Model.RowKey</dd>

                            <dt class="col-sm-3">Description</dt>
                            <dd class="col-sm-9">@Model.Description</dd>

                            <dt class="col-sm-3">Price</dt>
                            <dd class="col-sm-9"><strong class="text-primary">R @Model.Price.ToString("N2")</strong></dd>

                            <dt class="col-sm-3">Category</dt>
                            <dd class="col-sm-9">@Model.Category</dd>

                            <dt class="col-sm-3">Image URL</dt>
                            <dd class="col-sm-9 text-break">@Model.ImageUrl</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@Model.RowKey" />
            <input type="hidden" name="partitionKey" value="@Model.PartitionKey" />

            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>