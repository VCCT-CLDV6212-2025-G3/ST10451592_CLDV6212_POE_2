<!-- File: Views/Customers/Details.cshtml -->
@model Customer
@{
    ViewData["Title"] = "Customer Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <h2>Customer Details</h2>
        <dl class="row">
            <dt class="col-sm-2">First Name</dt>
            <dd class="col-sm-10">@Model.FirstName</dd>
            <dt class="col-sm-2">Last Name</dt>
            <dd class="col-sm-10">@Model.LastName</dd>
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>
            <dt class="col-sm-2">Phone Number</dt>
            <dd class="col-sm-10">@Model.PhoneNumber</dd>
            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Model.Address</dd>
            <dt class="col-sm-2">Created Date</dt>
            <dd class="col-sm-10">@Model.CreatedDate</dd>
        </dl>
        <a href="@Url.Action("Edit", "Customers", new { id = Model.RowKey })" class="btn btn-warning">Edit</a>
        <a href="@Url.Action("Delete", "Customers", new { id = Model.RowKey })" class="btn btn-danger">Delete</a>
        <a href="@Url.Action("Index", "Customers")" class="btn btn-secondary">Back to List</a>
    </div>
</div>